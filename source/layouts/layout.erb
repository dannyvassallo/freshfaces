  </head>

  <body class="<%= page_classes %>">
    <%= yield %>
    <div id="tearleft"></div>
    <div id="tearright"></div>
    <div id="overlay1"></div>
    <div id="overlay2"></div>
    <div id="starburst" class="text-center visible-md visible-lg">
      <a href="https://soundrink.com/app#/tour/ice-nine-kills" target="_blank">
        <img src="https://s3.amazonaws.com/myfangate.com/freshfaces/vipburst.png">
      </a>
    </div>
    <!-- Javascripts -->
    <%= javascript_include_tag  "all" %>
    <script src="./javascripts/sharecontest-v1.js"></script>
    <script>
      // init contest //
      $("#contest-widget").shareContestFB({
        context: {
          fbAppId: "1510539269267387",
          fbShareTitle: "Fearless Records Presents | Fresh Faces Tour",
          fbShareLink: "http://www.freshfacestour.com/",
          fbImageUrl: "https://s3.amazonaws.com/myfangate.com/freshfaces/share.jpg",
          fbSubText: "http://www.freshfacestour.com/",
          fbDialog: "Win a pair of tickets to a date near you!",
          formActionUrlId: "1pL4BLh0lTWGjsB2McRUn2eepGRh8HObpDgetg0jyeEE",
          firstNameId: "749925490",
          lastNameId: "453795809",
          emailId: "1493557255",
          optInId: "583147646",
          rulesId: "1082888376",
          fbCheckId: "701792494",
          twitterCheckId: "1730686214",
          contactName: "Fearless Records",
          rulesLink: "http://google.com",
          thankYouMsg: "Thanks for entering!",
          tweet: "This%20is%20a%20test%20tweet%20from%20",
          twitterUser: "@dudeguytestguydude",
          twitterUrl: "http://google.com",
          twitterHashtag: "test"
        }
      });
      // TOUR DATES
      $("#entry_1392261638").hide();
      var formfield = $('#entry_1493557255').parent();
      formfield.parent().parent().append('<select multiple id=\"e1\" style=\"width:100%\"></select>');
      $('.date').each(function(){ 
        var text = $(this).text(); 
        $('#e1').append('<option value=\"'+text+'\">'+text+'</option>')
      });      
      $("#e1").select2({
          maximumSelectionLength: 1,
          placeholder: "Select a Tour Date"
      });  
    </script>
  </body>
</html>
